<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/fondo"
    tools:context=".MainActivity">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Inicio de Sesión"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/morado"
        android:textSize="24sp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp" />

    <!-- Imagen de Login -->
    <ImageView
        android:id="@+id/imgLoginIcon"
        android:layout_gravity="center"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/registro"
        android:scaleType="fitCenter"
        android:layout_marginBottom="20dp" />

    <!-- Contenedor horizontal para ícono y EditText del correo -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp">

        <!-- Ícono de correo -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/gmail"
            android:contentDescription="Correo Icono"
            app:tint="@color/morado" />

        <!-- EditText para el correo -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:hint="Correo Electrónico"
            android:backgroundTint="@color/morado"
            android:padding="12dp"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="textEmailAddress"/>
    </LinearLayout>

    <!-- Contenedor horizontal para ícono y EditText de la contraseña -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp">

        <!-- Ícono de contraseña -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/padlock"
        android:contentDescription="Contraseña Icono"
            app:tint="@color/morado" />

        <!-- EditText para la contraseña -->
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:hint="Contraseña"
            android:backgroundTint="@color/morado"
            android:padding="12dp"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="textPassword"/>
    </LinearLayout>

    <!-- Mensaje -->
    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <!-- Botón de Iniciar Sesión -->
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar Sesión"
        android:backgroundTint="@color/morado"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:padding="12dp"
        android:layout_marginBottom="10dp" />

    <!-- Botón de Registro -->
    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrarse AQUÍ"
        android:backgroundTint="@color/fondo"
        android:textColor="@color/morado"
        android:textStyle="bold"
        android:padding="12dp"
        android:layout_marginBottom="20dp"
        android:elevation="4dp" />

</LinearLayout>
