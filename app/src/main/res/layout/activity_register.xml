<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/fondo"
    tools:context=".register">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registro de Usuario"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/morado"
        android:textSize="24sp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp" />

    <!-- Imagen -->
    <ImageView
        android:layout_gravity="center"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/receptionist"
        android:scaleType="fitXY"
        android:background="@drawable/circle_background"
        android:layout_marginBottom="20dp" />

    <!-- Contenedor horizontal para ícono y EditText -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp">

        <!-- Ícono de correo -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/gmail"
            android:contentDescription="Correo Icono"
            app:tint="@color/morado" />

        <!-- EditText para el correo -->
        <EditText
            android:id="@+id/etEmailR"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:hint="Correo Electrónico"
            android:backgroundTint="@color/morado"
            android:padding="12dp"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="textEmailAddress"/>
    </LinearLayout>


    <!-- Contenedor horizontal para ícono y EditText de la contraseña -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp">

        <!-- Ícono de contraseña -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/padlock"
            android:contentDescription="Contraseña Icono"
            app:tint="@color/morado" />

        <!-- EditText para la contraseña -->
        <EditText
            android:id="@+id/etPasswordR"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:hint="Contraseña"
            android:backgroundTint="@color/morado"
            android:padding="12dp"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/darker_gray"
            android:inputType="textPassword"/>
    </LinearLayout>


    <!-- Mensaje -->
    <TextView
        android:id="@+id/tvMessageR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginBottom="20dp"
        android:gravity="center" />

    <!-- Botón de Registro -->
    <Button
        android:id="@+id/btnRegisterR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Registrar Usuario"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/morado"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:padding="12dp" />

</LinearLayout>
